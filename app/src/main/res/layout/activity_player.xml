<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".PlayerActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_sn1"
            android:layout_margin="20dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="10dp"
            android:singleLine="true"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="italic">

        </TextView>

        <ImageView
            android:id="@+id/imgview1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/music_logo">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp">

            <SeekBar
                android:id="@+id/seekbar_1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:layout_marginBottom="40dp"
                android:progressBackgroundTint="@color/white"
                android:progressTint="@color/pur"
                android:thumbTint="@color/dpur">

            </SeekBar>

            <TextView
                android:id="@+id/txt_start"
                android:layout_toLeftOf="@id/seekbar_1"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="false"
                android:layout_marginLeft="20dp"
                android:text="0:10"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/txt_stop"
                android:layout_toRightOf="@id/seekbar_1"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="false"
                android:layout_marginRight="20dp"
                android:text="5:10"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/playbtn1"
                android:contentDescription="playbutton"
                android:layout_centerHorizontal="true"
                android:background="@drawable/baseline_pause"
                android:layout_width="80dp"
                android:layout_height="80dp">
            </Button>
            <Button
                android:id="@+id/btnnext"
                android:contentDescription="buttonnext"
                android:layout_toRightOf="@id/playbtn1"
                android:layout_marginTop="15dp"
                android:background="@drawable/baseline_skip_next"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:layout_height="50dp">
            </Button>

            <Button
                android:id="@+id/btnprev"
                android:contentDescription="buttonprevious"
                android:layout_toLeftOf="@id/playbtn1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/baseline_skip_previous"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </Button>

            <Button
                android:id="@+id/btnfast_forward"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/btnnext"
                android:background="@drawable/baseline_fast_forward"
                android:contentDescription="buttonfastforward"
                tools:ignore="TouchTargetSizeCheck">
            </Button>

            <Button
                android:id="@+id/btnfast_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/btnprev"
                android:background="@drawable/baseline_fast_back"
                android:contentDescription="buttonfastback"
                    android:textColor="#381D49"
                tools:ignore="TouchTargetSizeCheck">
            </Button>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>



